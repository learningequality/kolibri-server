#!/usr/bin/make -f
#export DH_VERBOSE = 1

%:
	dh $@ --with=systemd
override_dh_systemd_enable:
	dh_systemd_enable --name=kolibri-server

override_dh_compress:
	for file in $$(cd nginx_error_page/ && find -name "error.html" -printf '%P\n'); do \
		mkdir -p $(CURDIR)/debian/kolibri-server/etc/kolibri/dist/error_pages/$$(dirname $$file); \
		sed 's/1.2.3/$(shell dpkg-parsechangelog -SVersion)/' \
		  	nginx_error_page/$$file > $(CURDIR)/debian/kolibri-server/etc/kolibri/dist/error_pages/$$file;\
	done
	dh_compress